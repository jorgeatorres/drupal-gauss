function gauss_mail_user_login_validate($form, &$form_state) {
    if (isset($form_state['values']['name'])) {
        if ($name = db_result(db_query('SELECT name FROM {users} WHERE LOWER(mail) = LOWER(\'%s\')',
                                       $form_state['values']['name']))) {
            $form_state['values']['name'] = $name;
        }
    }
}

function gauss_profile_save(&$edit, &$user) {
    db_query('DELETE FROM {un_user_profile} WHERE uid = ?', array($user->uid));
    db_query("INSERT INTO {un_user_profile} (uid, name, title, office, extension, interests, bio) VALUES(?, ?, ?, ?, ?, ?, ?)", array($user->uid, $edit['full_name'], $edit['title'], $edit['office'], $edit['extension'], $edit['interests'], $edit['bio']));
    
    $edit['full_name'] = NULL;
    $edit['title'] = NULL;
    $edit['office'] = NULL;
    $edit['extension'] = NULL;
    $edit['interests'] = NULL;
    $edit['bio'] = NULL;
}

function gauss_profile_form(&$edit, &$user) {
    $form = array();
    
    $form['profile'] = array('#type' => 'fieldset',
                             '#title' => t('University Profile'));
    $form['profile']['title'] = array('#type' => 'textfield',
                                      '#title' => t('Title'),
                                      '#default_value' => isset($user->profile) ? $user->profile->title : '',
                                      '#size' => 40,
                                      '#maxlength' => 255);
    $form['profile']['office'] = array('#type' => 'textfield',
                                      '#title' => t('Office'),
                                      '#default_value' => isset($user->profile) ? $user->profile->office : '',
                                      '#size' => 20,
                                      '#maxlength' => 20);
    $form['profile']['extension'] = array('#type' => 'textfield',
                                          '#title' => t('Tel. Extension'),
                                          '#default_value' => isset($user->profile) ? $user->profile->extension : '',
                                          '#size' => 20,
                                          '#maxlength' => 20);                                      
    $form['profile']['interests'] = array('#type' => 'textarea',
                                          '#title' => t('Interests'),
                                          '#default_value' => isset($user->profile) ? $user->profile->interests : '',
                                          '#rows' => 2);                                        
    $form['profile']['bio'] = array('#type' => 'textarea',
                                    '#title' => t('Bio'),
                                    '#default_value' => isset($user->profile) ? $user->profile->bio : '',
                                    '#rows' => 5);
    return $form;
}

function gauss_load_profile(&$user) {
    $res = db_query('SELECT name, title, office, extension, interests, bio FROM {un_user_profile} WHERE uid = ?', array($user->uid));
    $profile = $res->fetchObject();
    $user->profile = $profile ? $profile : NULL;
    
    $user->profile->name = isset($user->profile->name) ? $user->profile->name : $user->name;
}

function gauss_roles($id = NULL) {
    $options = array('administrator' => t('Administrator'),
                     'teacher' => t('Teacher'),
                     'teaching assistant' => t('Teaching assistant'),
                     'staff' => t('Staff'));
    
    if ($id) {
        return $options[$id];
    } else {
        return $options;
    }

}

function gauss_teaching_roles($id = NULL) {
    if ($id)
        return gauss_roles($id);

    return array('teacher' => gauss_roles('teacher'),
                 'teaching assistant' => gauss_roles('teaching assistant'));
}