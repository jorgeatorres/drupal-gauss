function gauss_user_load($users) {
    foreach (array_keys($users) as $uid) {
        gauss_load_profile($users[$uid]);
    }
}

function gauss_form_user_profile_form_alter(&$form, &$form_state, $form_id) {
    $user = $form['#user'];
    $form_in = gauss_profile_form($form_state, $user);

    $form = array_merge($form, $form_in);
}

function gauss_form_user_register_form_alter(&$form, &$form_state, $form_id) {
    return gauss_form_user_profile_form_alter($form, $form_state, $form_id);
}

